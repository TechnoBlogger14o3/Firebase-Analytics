<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/layoutRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:alpha="0.5"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/txtSuperHero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="SuperHero"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/imgShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_marginTop="14dp"
            android:src="@android:drawable/ic_menu_share"
            app:backgroundTint="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgShare">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="23dp"
                    android:padding="14dp"
                    android:text="Spider-Man has spider-like abilities including superhuman strength and the ability to cling to most surfaces. He is also extremely agile and has amazing reflexes. Spider-Man also has a, “spider sense,” that warns him of impending danger."
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>